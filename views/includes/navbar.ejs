                <form class="d-flex " role="search" id="searchForm">
                    <input id="searchInput" class="form-control me-2 search-input" type="search"
                        placeholder="Search &nbsp;destination" aria-label="Search">
                    <button class="btn btn-search" type="submit"><i
                            class="fa-solid fa-magnifying-glass"></i>Search</button>
                            
                </form>
                <div class="result-box position-absolute bg-white border rounded-3 shadow" id="searchDropdown" style="display: none;">   </div>
                <script>
         
          
         let availableKeywords = ["INDIA", "AMERICA", "FRANCE", "JAPAN", "KARANJA"];
const resultBox = document.getElementById("searchDropdown");
const inputBox = document.getElementById("searchInput");

inputBox.addEventListener("input", function () {
    let input = inputBox.value.toLowerCase();
    let filteredOptions = availableKeywords.filter((keyword) => keyword.toLowerCase().includes(input));
    displayOptions(filteredOptions);
});

document.addEventListener("click", function (event) {
    if (!resultBox.contains(event.target) && event.target !== inputBox) {
        resultBox.style.display = "none";
    }
});

function displayOptions(options) {
    if (options.length === 0) {
        resultBox.innerHTML = "";
        resultBox.style.display = "none";
        return;
    }

    let optionList = options.map((option) => `<div class="dropdown-item" onclick="selectOption('${option}')">${option}</div>`).join("");
    resultBox.innerHTML = optionList;
    resultBox.style.display = "block";
}

function selectOption(option) {
    inputBox.value = option;
    resultBox.style.display = "none";
}

            </script>
              
