<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h4 class="col-6 offset-2">Login to Wanderlust </h4>
    <div class="col-8 offset-2">
        <form action="/login" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <lable for="username" class="form-label"> Username</lable>
                <input name="username" id="username"  type="text" class="form-control" required />
                
            </div>
           
            <div class="mb-3">
                <lable for="password" class="form-label"> Password</lable>
                <input name="password" id="password"  type="text" class="form-control" required />
             
            </div>
            <button class="btn btn-success mb-3">Login</button>
        </form>
    </div>
</div>